{
  "manifest_version": 3,
  "name": "JiraGrok",
  "version": "1.0.0",
  "description": "AI-powered JIRA ticket summarizer using Groq API",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.atlassian.net/*", "https://jira.grazitti.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
